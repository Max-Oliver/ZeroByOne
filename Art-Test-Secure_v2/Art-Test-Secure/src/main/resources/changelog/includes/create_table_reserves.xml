<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_table_reserves" author="max3.1994@gmail.com">
        <createTable tableName="reserves">
            <column name="id_reserve" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_barber" type="BIGINT"/>
            <column name="id_client" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_reserve" type="TIMESTAMP WITH TIME ZONE">
            </column>
            <column name="time_reserve" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="type_work" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="createOn" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="deleteOn" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="addBarbersForeignKeyToReserves" author="max3.1994@gmail.com">
        <addForeignKeyConstraint baseColumnNames="id_barber"
                                 baseTableName="reserves"
                                 constraintName="fk_reserves_barber"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="SET NULL"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id_barber"
                                 referencedTableName="barber"/>
    </changeSet>
    <changeSet id="addClientsForeignKeyToReserves" author="max3.1994@gmail.com">
        <addForeignKeyConstraint baseColumnNames="id_client"
                                 baseTableName="reserves"
                                 constraintName="fk_reserves_client"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="SET NULL"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id_client"
                                 referencedTableName="client"/>
    </changeSet>
</databaseChangeLog>