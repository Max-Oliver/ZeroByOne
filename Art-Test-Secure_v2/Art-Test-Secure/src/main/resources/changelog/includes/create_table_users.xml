<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        ">

    <changeSet id="create_table_users" author="max3.1994@gmail.com">
        <createTable tableName="users">
            <column name="id_user" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(50)"/>
            <column name="pass" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(50)">
            </column>
            <column name="email" type="VARCHAR(255)">
                    <constraints nullable="false"/>
            </column>
            <column name="cel_phone" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="createOn" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="deleteOn" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="addUserForeignKeyToClients" author="max3.1994@gmail.com">
        <addForeignKeyConstraint baseColumnNames="id_user"
                                 baseTableName="users"
                                 constraintName="fk_user_client"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="SET NULL"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id_client"
                                 referencedTableName="client"/>
    </changeSet>
    <changeSet id="addUserForeignKeyToBarbers" author="max3.1994@gmail.com">
        <addForeignKeyConstraint baseColumnNames="id_user"
                                 baseTableName="users"
                                 constraintName="fk_user_barber"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="SET NULL"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id_barber"
                                 referencedTableName="barber"/>
    </changeSet>
</databaseChangeLog>