    <changeSet id="create_table_users" author="max3.1994@gmail.com">
        <createTable tableName="users">
            <column name="idUser" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cel_phone" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="createOn" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="deleteOn" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="status" type="BOOLEAN">
            </column>
            <column name="idClient" type="BIGINT">
            </column>
            <column name="idBarber" type="BIGINT">
            </column>
        </createTable>

